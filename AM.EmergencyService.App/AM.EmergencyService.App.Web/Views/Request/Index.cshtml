@model IEnumerable<AM.EmergencyService.App.Common.Models.RequestModel>

<link href="@Url.Content("~/Content/themes/base/jquery-ui.min.css")" rel="stylesheet" />
<script src="@Url.Content("~/Scripts/jquery-3.3.1.min.js")"></script>
<script src="@Url.Content("~/Scripts/jquery-ui-1.12.1.min.js")"></script>

<script type="text/javascript">
    $(function () {
        $('.datepicker').datepicker({ format: "dd.mm.yyyy" });
    })
</script>

<h2>Вызовы</h2>
<div>
    @using (Html.BeginForm())
    {
        @Html.Label("Дата вызова", htmlAttributes: new { @class = "control-label col-md-3" })
        @Html.TextBox("requestDate", " ", new { @class = "form-control datepicker" })
        <input type="submit" value="Показать"/>
    }
</div>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.RequestNumber)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.RequestAddress)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.RequestReason)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.RequestDate)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.BrigadeCallDate)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.BrigadeArrivalDate)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.BrigadeEndDate)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.BrigadeReturnDate)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.RequestCategory)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.RequestNumber)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.RequestAddress)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.RequestReason)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.RequestDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.BrigadeCallDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.BrigadeArrivalDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.BrigadeEndDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.BrigadeReturnDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.RequestCategory)
            </td>
            <td>
                @*@Html.ActionLink("Edit", "Edit", new { id = item.Id }) |*@
                @Html.ActionLink("Подробнее", "Details", new { id = item.Id })
                @*@Html.ActionLink("Delete", "Delete", new { id = item.Id })*@
            </td>
        </tr>
    }

</table>

