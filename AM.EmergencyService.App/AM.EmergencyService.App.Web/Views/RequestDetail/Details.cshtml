@model AM.EmergencyService.App.Common.Models.RequestDetailModel
@{
    ViewBag.Title = "Происшествия";
}
@using (Html.BeginForm("Edit", "RequestDetail", FormMethod.Post))
{
    <h4>Детали происшествия:</h4>
    @Html.Action("ShowRequestDetails", new { requestNumber = Model.RequestNumber })
    <h4>Пострадавшие:</h4>
    @Html.Action("ShowRequestCasualty", "Casualty", new { requestNumber = Model.RequestNumber })
    @Html.Action("ShowRequestInventory", "Inventory", new { requestNumber = Model.RequestNumber })
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Сохранить" class="btn btn-default" />
        </div>
    </div>
}
<p>
    @Html.ActionLink("Назад", "Index", "Request")
</p>
